<!DOCTYPE html>
<html>
<head>
  <title>Dance Teaching Room >> <%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div class="container">
      <header>
        <%= image_tag("logo.png", :alt => "dance teaching room", :class => "round") %>
        <nav class="round">
          <ul>
            <li><%= link_to "Home", home_path %></li>
            <li><%= link_to "Waltz steps", dance_path %></li>
            <% if signed_in? %>
                <li><%= link_to current_user.name+'\'s routine' , current_user %></li>
                <li><%= link_to "Log out", signout_path %></li>
            <% end %>
          </ul>
        </nav>
      </header>
      <section class="round">
        <% flash.each do |key, value| %>
          <div style="color: red" class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
    </div>

</body>
</html>
